<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/konfirmasis"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:layout_marginTop="20dp"
        android:paddingRight="60dp"
        android:textAlignment="center"
        android:text="Pastikan anda telah menghubungi pihak bengkel dan menyampailkan keluhan kendaraan anda"
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lanjut"
            android:id="@+id/lanjut"
            app:cornerRadius="4dp"
            android:textColor="#3FBEC6"
          android:backgroundTint="@color/white"
            app:strokeWidth="2dp"
            android:layout_marginRight="10dp"
            app:strokeColor="#3FBEC6"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call Bengkel"
            app:cornerRadius="4dp"
            android:textColor="#FFFF"
            android:id="@+id/call"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#3FBEC6"/>

    </LinearLayout>

</LinearLayout>
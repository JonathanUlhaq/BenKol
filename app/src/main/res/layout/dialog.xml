<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/konfirmasis"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_background"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="20dp"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_marginBottom="20dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/poppinssemibbold"
        android:layout_marginTop="50dp"
        android:paddingRight="20dp"
        android:textColor="#8E8B8B"
        android:textAlignment="center"
        android:text="Pastikan anda telah menghubungi pihak bengkel dan menyampailkan keluhan kendaraan anda"
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lanjut"
            android:id="@+id/lanjut"
            android:background="@drawable/montir_button"
            android:textColor="@color/biru"

            android:layout_marginRight="10dp"
     />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call Bengkel"
            app:cornerRadius="4dp"
            android:textColor="#FFFF"
            android:id="@+id/call"
            android:padding="10dp"
            android:background="@drawable/dropdown_corner"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/biru"/>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BantuancsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/back"
            app:title="Riwayat Transaksi"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="0dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tvkategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppinssemibbold"
        android:text="Pilih kategori Kendala"
        android:textColor="@color/biru"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="80dp" />

    <TextView
        android:id="@+id/psn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppinssemibbold"
        android:text="Masalah pada pesanan"
        android:textColor="@color/biru"
        app:layout_constraintTop_toBottomOf="@+id/tvkategori"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_editor_absoluteX="44dp" />

    <ImageView
        android:id="@+id/imgdetail"
        app:layout_constraintTop_toBottomOf="@+id/psn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kendala"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="154dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="323dp"
        android:layout_height="50dp"
        android:layout_marginTop="132dp"
        android:background="@color/biru"
        android:text="Chat dengan CS"
        app:layout_constraintTop_toBottomOf="@+id/imgdetail"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="44dp" />


</androidx.constraintlayout.widget.ConstraintLayout>